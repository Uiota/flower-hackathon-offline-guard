{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "color": {
      "defaultPalette": false,
      "palette": [
        {"slug":"bg","color":"#0B0E13","name":"Background"},
        {"slug":"bg-2","color":"#0D1218","name":"Background 2"},
        {"slug":"ink","color":"#EAF2FF","name":"Ink"},
        {"slug":"muted","color":"#9FB1C7","name":"Muted"},
        {"slug":"cyan","color":"#00E5FF","name":"Cyan"},
        {"slug":"blue","color":"#1B6BFF","name":"Blue"},
        {"slug":"violet","color":"#714BFF","name":"Violet"}
      ]
    },
    "typography": {
      "fontFamilies": [
        {"slug":"system","name":"System","fontFamily":"-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,Ubuntu,'Helvetica Neue',sans-serif"}
      ],
      "fontSizes": [
        {"slug":"base","size":"1rem","name":"Base"},
        {"slug":"xl","size":"clamp(2rem,5vw,3.5rem)","name":"Hero"}
      ]
    },
    "spacing": {
      "spacingScale":{"steps":7}
    }
  },
  "styles": {
    "color": { "background":"var(--wp--preset--color--bg)", "text":"var(--wp--preset--color--ink)" },
    "typography": { "fontFamily":"var(--wp--preset--font-family--system)", "lineHeight":"1.6" }
  }
}
