# Federated Learning Environment Configuration
# Copy this file to .env and configure for your deployment

# ==============================================================================
# CORE SECURITY SETTINGS
# ==============================================================================

# Off-Guard Security Mode (REQUIRED)
OFFLINE_MODE=1

# Security Level (development|production|enterprise)
SECURITY_LEVEL=production

# Cryptographic Settings
CRYPTO_ALGORITHM=Ed25519
KEY_SIZE=256
SIGNATURE_REQUIRED=true

# Environment Isolation
VENV_REQUIRED=true
DEPENDENCY_VERIFICATION=strict

# ==============================================================================
# FEDERATED LEARNING CONFIGURATION
# ==============================================================================

# Server Settings
FL_SERVER_HOST=localhost
FL_SERVER_PORT=8080
FL_DASHBOARD_PORT=8081

# Training Parameters
FL_ROUNDS=10
FL_CLIENTS_PER_ROUND=6
FL_STRATEGY=fedavg
FL_DATASET=mnist

# Client Configuration
FL_CLIENT_EPOCHS=3
FL_CLIENT_BATCH_SIZE=32
FL_CLIENT_LEARNING_RATE=0.01

# ==============================================================================
# PRIVACY AND SECURITY
# ==============================================================================

# Differential Privacy
DP_ENABLED=false
DP_NOISE_MULTIPLIER=0.8
DP_MAX_GRAD_NORM=1.0
DP_PRIVACY_BUDGET=8.0

# Network Security
NETWORK_ENCRYPTION=true
TLS_ENABLED=true
MESH_ENCRYPTION=true

# ==============================================================================
# SYSTEM CONFIGURATION
# ==============================================================================

# Logging
LOG_LEVEL=INFO
LOG_FILE_ENABLED=true
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Performance
MAX_WORKERS=8
MEMORY_LIMIT_GB=4
CPU_LIMIT_CORES=4

# Storage
DATA_DIR=./data
MODELS_DIR=./models
LOGS_DIR=./logs
ARTIFACTS_DIR=./demo_artifacts

# ==============================================================================
# NETWORK AND MESH CONFIGURATION
# ==============================================================================

# UIOTA Mesh Settings
MESH_ENABLED=true
MESH_QUEUE_SIZE=1000
MESH_RETRY_ATTEMPTS=3
MESH_TIMEOUT_MS=5000

# Network Simulation
NETWORK_LATENCY_MS=50
NETWORK_JITTER_MS=25
NETWORK_DROPOUT_PCT=0.1
PACKET_LOSS_RATE=0.05

# ==============================================================================
# MONITORING AND METRICS
# ==============================================================================

# Dashboard Settings
DASHBOARD_ENABLED=true
DASHBOARD_REFRESH_INTERVAL=2
DASHBOARD_HISTORY_SIZE=100

# Metrics Collection
METRICS_ENABLED=true
METRICS_EXPORT_INTERVAL=10
PROMETHEUS_ENABLED=false

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# ==============================================================================
# DEPLOYMENT CONFIGURATION
# ==============================================================================

# Environment Type
DEPLOYMENT_ENV=development

# Docker Settings (if using containers)
DOCKER_ENABLED=false
DOCKER_NETWORK=fl-network
DOCKER_COMPOSE_FILE=docker-compose.yml

# Production Settings
PRODUCTION_READY=false
SSL_CERT_PATH=
SSL_KEY_PATH=
ADMIN_API_KEY=

# ==============================================================================
# DEVELOPMENT AND TESTING
# ==============================================================================

# Development Mode
DEBUG_MODE=false
VERBOSE_LOGGING=false
PROFILING_ENABLED=false

# Testing
TEST_MODE=false
MOCK_HARDWARE=true
SIMULATION_SPEED=1.0

# Demo Configuration
AUTO_START_AGENTS=true
AUTO_OPEN_BROWSER=true
DEMO_DATA_GENERATION=true